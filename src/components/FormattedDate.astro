---
export interface Props {
  date: Date | undefined;
}

// ("Jun 1, 2021");
const { date } = Astro.props;

function formattedDate(date: Date | undefined) {
  return date
    ? date.toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
      })
    : "";
}
---

<p class="text-white">{formattedDate(date)}</p>
